<div class="sign-up">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.file_field :avatar, label: 'Avatar: ' %>
    <%= f.email_field :email, placeholder: 'user@domain.com' %>
    <%= f.text_field :username, label: 'Username: ' %>
    <%= f.password_field :password, label: 'Password: ' %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.submit "Sign Up" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>