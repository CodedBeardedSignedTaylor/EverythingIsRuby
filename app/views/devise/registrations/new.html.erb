<div class="sign-up">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= devise_error_messages! %>

      <div>
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'user@domain.com' %>
      </div>

      <div>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: 'username' %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'password' %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: 'type password again', autocomplete: "off" %>
      </div>

      <div>
        <%= f.submit "Sign Up", :class => 'btn btn-primary' %>
      </div>
  <% end %>
  
  <div class="text-center">
    <h2>OR</h2>
    <%= render "devise/shared/links" %>
  </div>
</div>