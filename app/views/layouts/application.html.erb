<!DOCTYPE html>
<html>
  <head>
    <title>Everything Is Collateral </title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/partials/shim' %>
  </head>
  <body>
    <%= render 'layouts/partials/header' %>
    <div class="container">

      <!--Used to notify the user of errors-->
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <!--Sign Up and Sign In pop-ups-->
      <div class="messagepop login-pop-in">
        <h2>Test</h2>
        <a class="close" href="/">Go Away</a>
      </div>
      <div class="messagepop signup-pop-in">
        <h2>Test</h2>
        <a class="close" href="/">Go Away</a>
      </div>

      <!--Yields all of the stuff you know and love.-->
      <%= yield %>
      <%= render 'layouts/partials/footer' %>
    </div>
  </body>
</html>
