<div class="post">
	<div class="post-header row">
		<h2 class="text-center"><%= @post.title %></h2>
		<%= image_tag @post.title_image.url(:full), :class => "center-block img-responsive" %>
	</div>

	<div class="post-content center-block row">
		<%= simple_format @post.text %>
		<% @time = @post.created_at %>
		<h5 class="text-center">Written by Taylor on <b><%= @time.strftime("%m/%d/%Y") %></b></h5>
	</div>

	<div class="center-block">
		<div class="comments-section row">
			<% @post.comments.each do |comment| %>
				<div class="comment">
					<h4>- <%= comment.commenter %></h4><p>Posted On:</p>
					<p><%= comment.body %></p>
					<% if user_signed_in? && comment.commenter == current_user.username %>
						<div class="comment-functions">
							<p>
									<%= link_to 'Edit', edit_post_comment_path(comment.id, @post.id) %> |
								<%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
							</p>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>

	<%if user_signed_in? %>
		<%= render 'comments/form' %>
	<% end %>

	<div class="bottom-nav text-center">
		<button type="button" class="btn btn-default">
			<%= link_to 'Back', posts_path %>
		</button>
		<% if can? :update, @post %>
			| <button type="button" class="btn btn-default"><%= link_to 'Edit Post', edit_post_path(@post) %></button>
		<% end %>
	</div>
</div>