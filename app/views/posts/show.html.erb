<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<% if user_signed_in? %> 
  <% render 'posts/comment_form' %>
<% else %>
  <p>Please log in to display comments.</p>
<% end %>
 
<%= link_to 'Back', posts_path %>