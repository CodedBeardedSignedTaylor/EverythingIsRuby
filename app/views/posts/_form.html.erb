<div class="post-form">
  <%= form_for @post, html: { multipart: true } do |f| %>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :tagline %><br>
      <%= f.text_field :tagline %>
    </p>

    <p>
      <%= f.label :title_image %><br>
      <%= f.file_field :title_image %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.cktext_area :text, :class => 'ckeditor', :ckeditor => {:language => 'en'} %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>