<div class="post-form">
  <%= form_for @post, html: { 
        class: "directUpload", 
        html: { 
          class: 'directUpload', 
          data: { 
            'form-data' => (@s3_direct_post.fields), 
            'url' => @s3_direct_post.url, 
            'host' => URI.parse(@s3_direct_post.url).host 
          } 
        } } do |f| %>
    <% if @post.errors.any? %>
    <div id="error_exdivlanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <p class="control">
        <%= f.text_field :title, :class => 'input' %>
      </p>
    </div>

    <div class="field">
      <%= f.label :banner_image_url %><br>
      <%= f.file_field :banner_image_url %>
    </div>

    <div class="field">
      <%= f.label :tag_list %><br>
      <p class="control">
        <%= f.text_field :tag_list, :class => 'input' %>
      </p>
    </div>

    <div class="field">
      <%= f.label :tagline %><br>
      <p class="control">
        <%= f.text_field :tagline, :class => 'input' %>
      </p>
    </div>

    <div class="checkbox">
      <%= f.label :published do %>
        <%= f.check_box :published %>
        Published
      <% end %>
    </div>

    <div class="field">
      <%= f.label :body %><br>
      <p class="control">
        <%= f.text_area :body, placeholder: "Enter Post Content Here.", :class => 'textarea', rows: 25 %>
      </p>
    </div>

    <div class="has-text-centered">
      <%= f.submit class: "button is-primary" %>
    </div>
  <% end %>
</div>
