<div class="most-recent">
	<% @posts = Post.order("created_at desc").limit(1) %>
	<% @posts.each do |post| %>
		<div class="post">
			<h2><%= post.title %></h2>
			<%= image_tag post.title_image.url(:full)%>
			<p><%= simple_format post.text %></p>
			<br/>
		</div>
		<div class="text-center">
			<button type="button" class="btn btn-default readmore">
				<%=link_to 'Read More', post_path(post) %>
			</button>
		</div>
	<% end %>
</div>