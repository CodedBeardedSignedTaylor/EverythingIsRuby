gem 'jquery-rails'
gem 'turbolinks'
gem 'yui-compressor'
gem 'compass-rails'

# Testing assets

group :development, :test do
	gem 'rspec-rails'
	gem 'rails-controller-testing'
  gem 'factory_bot_rails'
