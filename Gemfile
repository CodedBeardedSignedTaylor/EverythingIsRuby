source 'https://rubygems.org'
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '5.0.1'
gem 'sprockets'
gem 'bcrypt'

# Database and server
gem 'pg'
gem 'unicorn'

# Authentication and Roles
gem 'devise'

# UI Frameworks and Gems
gem 'will_paginate'
gem 'will_paginate-bootstrap'
gem "therubyracer"
gem "bootstrap-sass"
gem "sass-rails"
gem "haml"

# Rendering and Tagging
gem 'redcarpet', '3.4.0'
gem 'acts-as-taggable-on'
gem 'friendly_id'

# Javascript and Coffeescript
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', group: :doc
gem 'yui-compressor'
gem 'compass-rails'

# Testing assets

group :development, :test do
	gem 'rspec-rails'
  gem 'factory_girl_rails'
	gem 'faker'
end
